{
  "openapi": "3.0.0",
  "info": {
    "title": "react-training-api",
    "description": "The API the React Training",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "User"
        ],
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCredentials"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful. Returns User",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JwtResponse"
                }
              }
            }
          },
          "403": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string",
            "example": "Error Response",
            "enum": [
              "INVALID_EMAIL",
              "INVALID_PASSWORD",
              "SERVER_ERROR"
            ]
          }
        }
      },
      "UserCredentials": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "nullable": false,
            "required": true,
            "example": "test@example.de"
          },
          "password": {
            "type": "string",
            "format": "string",
            "nullable": false,
            "required": true,
            "example": "d424d344342342"
          }
        }
      },
      "User": {
        "type": "object",
        "required": ["email", "name"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "test@example.de"
          },
          "name": {
            "type": "string",
            "format": "string",
            "example": "bob"
          }
        }
      },
      "JwtResponse": {
        "type": "object",
        "required": ["jwt"],
        "properties": {
          "jwt": {
            "type": "string",
            "format": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjp7Iâ€¦xOTh9.PfbO6LzMoIjAzJ7NbjO24KKRNq68xHrJMTVNz4pZNnQ"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
